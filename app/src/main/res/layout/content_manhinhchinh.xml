<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:weightSum="3"
    android:orientation="vertical"
    android:background="#dcdada"
    >
    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/recyler_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="0.25"-->
        <!--android:background="@color/xanhmain"-->
        <!--&gt;-->
    <!--</android.support.v7.widget.RecyclerView>-->
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="@drawable/drawable_layout_main"
        android:weightSum="2"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_weight="0.4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Tổng quan"
            android:textSize="@dimen/baoden"
            android:textColor="@color/backed"
            />
        <TextView
            android:layout_weight="0.35"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/cham"
            android:textSize="@dimen/chuthuong"
            android:textColor="@color/xam"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.017"
            android:background="@drawable/gachchan"
            >
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.40"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp"
            >
            <TextView android:textColor="#414040"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tiền vào"
                />
            <TextView
                android:id="@+id/txttienvao"
                android:textColor="#0011ff"
                android:textAlignment="viewEnd"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5,000,000"
                android:gravity="end" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.40"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:textColor="#414040"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tiền ra"
                />
            <TextView
                android:id="@+id/txtienra"
                android:textColor="#ff0000"
                android:textAlignment="viewEnd"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10000"
                android:gravity="end" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.017"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <LinearLayout
                android:layout_weight="0.55"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.45"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gachchan">

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <LinearLayout
                android:layout_weight="0.55"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </LinearLayout>
            <TextView
                android:id="@+id/txttongtien"
                android:textAlignment="viewEnd"
                android:layout_weight="0.45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5,000,000 đ"
                android:textColor="#201f1f"
                android:textSize="20dp"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.15"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_weight="1.65"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/drawable_layout_main"
        android:orientation="vertical"
        android:weightSum="2"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:id="@+id/txtngay"
                android:gravity="center"
                android:layout_weight="0.25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="12"
                android:textSize="30dp"
                android:textColor="@color/backed"
                />
            <LinearLayout
                android:layout_weight="0.75"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                >
                <TextView
                    android:id="@+id/txtthu"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Hôm qua"
                    android:textSize="12dp"
                    android:textColor="@color/backed"
                    />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/txtthang"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tháng Hai"
                        android:textSize="12dp"
                        android:textColor="@color/xam"
                        />
                    <TextView
                        android:id="@+id/txtnam"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018"
                        android:textSize="12dp"
                        android:textColor="@color/xam"
                        />
                </LinearLayout>


            </LinearLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                >
                <TextView
                    android:id="@+id/txttienngay"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22000"
                    android:textSize="20dp"
                    android:textColor="@color/backed"
                    />
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.01"
            android:background="@drawable/gachchan"
            >
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1.45"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

            <ListView
                android:id="@+id/listct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.95"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/btnadd"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/add"/>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
