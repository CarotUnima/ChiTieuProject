<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >
    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/backgrouplayout"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imagedk"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/hinh2" />

            <TextView
                android:id="@+id/txtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Trần Văn Phú"
                android:textColor="#fdfbfb"
                android:textSize="20dp" />
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_marginTop="110dp"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="80dp">
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    >
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Mã Tiền"
                        android:textColor="@color/startblue"
                        />
                    <TextView
                        android:id="@+id/txtmatien"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="$"
                        android:textColor="#333131"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    >
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Email"
                        android:textColor="@color/startblue"
                        />
                    <TextView
                        android:id="@+id/txtemail"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="vanphudhsp@gmail.com"
                        android:textColor="#333131"
                        android:singleLine="true"
                        android:ellipsize="end"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        >
        <RelativeLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edittienvao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tiền Vào"
                    android:inputType="textEmailAddress"
                    android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                    />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            >
            <Button
                android:id="@+id/btnhoanthanh"
                android:textColor="#fcfcfc"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Hoàn Thành"
                android:background="@drawable/drawable_button_dangnhap"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
